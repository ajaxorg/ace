{
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2019",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "src/test",
    "src/**/*_test.js",
    "src/keyboard/vim.js",
    "src/keyboard/emacs.js",
    "src/keyboard/sublime.js",
    "src/keyboard/vscode.js",
    "src/mode",
    "./ace-modes.d.ts",
    "src/**/* *",
    "./src/**/*.d.ts"
  ],
  "include": [
    "./src/**/*.js",
    "./interfaces.d.ts",
    "./ace-internal.d.ts"
  ]
}
